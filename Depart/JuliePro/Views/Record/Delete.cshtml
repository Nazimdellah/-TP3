@model RecordViewModel

@{
    ViewData["Title"] = @Locals["Delete"];
}

<h1>@Locals["Delete"]</h1>

<h3>@Locals["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Locals["Record"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DisciplineName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DisciplineName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AmountWithUnit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AmountWithUnit)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrainerName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Locals["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Locals["Back to List"]</a>
    </form>
</div>
